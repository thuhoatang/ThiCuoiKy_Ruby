<h1>New Article</h1>

<%= form_with model: @article do |form| %>
  <div class="form-group">
    <label for="exampleFormControlInput1">Title</label>
    <input name="article[title]" type="text" class="form-control" id="exampleFormControlInput1" placeholder="typing...">
  </div>

  <div class="form-group">
  <label for="exampleFormControlTextarea1">Body </label>
  <textarea name="article[body]" class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
</div>

  <div>
    <%= form.submit %>
  </div>
<% end %>